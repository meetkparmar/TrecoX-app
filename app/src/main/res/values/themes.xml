<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TrecoX" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccentDark</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="materialButtonStyle">@style/Widget.App.Material.Button</item>
        <item name="materialCardViewStyle">@style/Widget.App.Material.CardView</item>
        <item name="checkboxStyle">@style/Widget.App.Material.Checkbox</item>
        <item name="textInputStyle">@style/Widget.App.Material.TextInputLayout</item>
        <!--Typography-->
        <item name="textAppearanceHeadline1">@style/Widget.App.TextAppearance.HeadLine1</item>
        <item name="textAppearanceHeadline2">@style/Widget.App.TextAppearance.HeadLine2</item>
        <item name="textAppearanceHeadline3">@style/Widget.App.TextAppearance.HeadLine3</item>
        <item name="textAppearanceHeadline4">@style/Widget.App.TextAppearance.HeadLine4</item>
        <item name="textAppearanceHeadline5">@style/Widget.App.TextAppearance.HeadLine5</item>
        <item name="textAppearanceHeadline6">@style/Widget.App.TextAppearance.HeadLine6</item>
        <item name="textAppearanceSubtitle1">@style/Widget.App.TextAppearance.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/Widget.App.TextAppearance.Subtitle2</item>
        <item name="textAppearanceBody1">@style/Widget.App.TextAppearance.Body1</item>
        <item name="textAppearanceBody2">@style/Widget.App.TextAppearance.Body2</item>
        <item name="textAppearanceButton">@style/Widget.App.TextAppearance.Button</item>
        <item name="textAppearanceOverline">@style/Widget.App.TextAppearance.Overline</item>
    </style>
</resources>