<resources>

    <style name="Widget.App.NoActionBar" parent="Theme.TrecoX">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/grey_60</item>
        <item name="colorPrimaryDark">@color/grey_20</item>
    </style>

    <style name="Widget.App.SplashScreenNoActionBar" parent="Theme.TrecoX">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
    </style>

    <style name="Widget.App.Material.ToolBar.Colored" parent="Widget.MaterialComponents.Toolbar.Primary">
    </style>

    <!--    Button-->
    <style name="Widget.App.Material.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="rippleColor">@color/colorPrimaryDark</item>
        <item name="cornerRadius">@dimen/corner_radius_4dp</item>
        <item name="elevation">@dimen/elevations_2dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.App.Material.Button.Outline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="rippleColor">@color/colorPrimaryDark</item>
        <item name="cornerRadius">@dimen/corner_radius_4dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="elevation">@dimen/elevations_2dp</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="Widget.App.Material.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="rippleColor">@color/colorPrimaryDark</item>
        <item name="cornerRadius">@dimen/corner_radius_4dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!--    CardView-->
    <style name="Widget.App.Material.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/corner_radius_16dp</item>
        <item name="cardElevation">@dimen/elevations_4dp</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <!--    Checkbox-->
    <style name="Widget.App.Material.Checkbox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.CheckBox</item>
    </style>

    <style name="ThemeOverlay.App.CheckBox" parent="">
        <item name="colorSecondary">@color/colorAccent</item>
    </style>

    <!--TextInputLayout-->
    <style name="Widget.App.Material.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>
        <item name="android:inputType">textCapSentences</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout" parent="">
        <item name="editTextStyle">@style/ThemeOverlay.App.TextInputEditText</item>
    </style>

    <style name="ThemeOverlay.App.TextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.App.BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_top_rounded_corner</item>
    </style>
</resources>